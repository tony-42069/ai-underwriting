# API Configuration
DEBUG=True
API_V1_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ai_underwriting

# OCR Configuration
# Windows paths (update for your system)
POPPLER_PATH=C:\Users\YourUser\Documents\poppler-24.08.0\Library\bin
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Mac/Linux paths (uncomment if needed)
#POPPLER_PATH=/usr/local/bin
#TESSERACT_PATH=/usr/local/bin/tesseract

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt-deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment

# Security Settings
SECRET_KEY=generate-a-secure-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO

# File Storage Settings (optional S3 configuration)
STORAGE_PROVIDER=local
#STORAGE_PROVIDER=s3
#AWS_ACCESS_KEY_ID=your-access-key
#AWS_SECRET_ACCESS_KEY=your-secret-key
#AWS_REGION=us-east-1
#AWS_BUCKET_NAME=your-bucket-name

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=10
CACHE_TTL=3600

# Document Processing Settings
MAX_CHUNK_SIZE=1000
OVERLAP_SIZE=100
MIN_CONFIDENCE_SCORE=0.7

# Extraction Settings
TENANT_CONCENTRATION_THRESHOLD=20.0
MAX_EXPENSE_RATIO=80.0
MIN_DSCR=1.2
MAX_LTV=75.0

# Cleanup Settings
FAILED_DOCUMENT_MAX_AGE_HOURS=24
COMPLETED_DOCUMENT_MAX_AGE_DAYS=30
